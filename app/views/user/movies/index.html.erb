
<div class="row">
    <div class="col-lg-3">
    　<div class="ranking">
        <p class="title">ランキング</p>
        　 <% i=0 %>
        <div class="rank-box">
    　     <% @ranks.each do |rank| %>
            <% movie=Movie.find(rank[1]) %>
            <div><%= i+=1 %>位 <%= link_to Movie.title,user_movie_path(movie.id) %></div>
        <% end %>
        </div>
    　 </div>
    </div>

    <div class="col-lg-8 col-lg-offset-1">
        <% @movies.each do |movie|%>
        <div class="product-block">
            <%= link_to(user_movie_path(movie.id)) do %>
                <%= attachment_image_tag movie, :image,:size => "200x200" %>
                <div><%= movie.title %></div>
            <% end %>
        </div>
        <% end %>
    </div>
</div>