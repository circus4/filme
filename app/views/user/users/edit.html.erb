<div class="row">
<%= form_with model:@user do |f|%>
  <div class="col-lg-3">
    <%= render 'user/users/sidebar',user:current_user,edit:true,f:f %>
  </div>

  <div class="col-lg-7">
    <h2 class="text-center profil-title">公開プロフィール</h2>
    <h4>基本情報</h4><br/>

      <div class="field form-group">
        <%= f.label :読みがな %><br />
        <%= f.text_field :phonetic_name, autofocus: true,autocomplete: "phonetic_name",class:"form-control",placeholder:"ふりがな" %><br />
        <%= f.label :名前 %><br />
        <%= f.text_field :name,autocomplete:"name",class:"form-control",placeholder:"姓名" %>
      </div>

      <div class="field form-group">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autocomplete: "email",class:"form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :郵便番号 %><br />
        <%= f.text_field :postal_code,autocomplete: "postal_code",class:"form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :住所 %><br />
        <%= f.text_field :prefecture,autocomplete: "prefecture",class:"form-control",placeholder:"都道府県" %><br >
        <%= f.text_field :city, autocomplete:"city",class:"form-control",placeholder:"市区町村" %><br >
        <%= f.text_field :adress,autocomplete:"adress",class:"form-control",placeholder:"番地・建物" %>
      </div>

      <div class="field form-group">
        <%= f.label :電話番号 %><br />
        <%= f.text_field :phone_number,autocomplete: "phone_number",class:"form-control" %>
      </div>

      <div class="edit-btn">
       <%= f.submit "編集",class:"btn btn-primary btn-edit" %><br><br>
       <%= link_to "退会",user_check_path,class:"btn btn-warning btn-edit" %>
      </div>
    <% end %>
  </div>

</div>