<div class="row">
    <div class="col-lg-3">
      <%= render 'user/users/sidebar',user:current_user,edit:false %>
    </div>

    <div class="col-lg-7">
       <h2 class="text-center profil-title">購入履歴</h2>

        <% @history_items.each do |history_item| %>
            <% @product=Product.find(history_item.id) %>
            <% @history_item_img="status#{history_item.product_status}.png" %>	 
            <div class="row">
                   <div class="col-lg-3 ">
                    <%= attachment_image_tag @product, :image,:size => "200x200" %>
                   </div>
                   <div class="col-lg-3 col-offset-1">
                     <div class="title"><%= @product.product_title %></div>
                     <div class="price">¥ <%= @product.price %></div>
                   </div>
                   <div class="col-lg-3">
                     <%= image_tag @history_item_img, :size => '350x150' %>
                   </div>
            </div>
        <% end %>
    </div>
</div>