<div class="nested-fields">

  <div class="field">
    <%= f.label :track_name %>
    <%= f.text_field :track_name %>
  </div>
  <div class="field">
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>
  </div>
  <div class="field">
    <%= f.hidden_field :disk_num, :value => 1 %>
  </div>
  <div class="field">
      <%= f.label :track_order %>
      <%= f.number_field :track_order %>
  </div>
  <%= link_to_remove_association "remove track", f %>
</div>
